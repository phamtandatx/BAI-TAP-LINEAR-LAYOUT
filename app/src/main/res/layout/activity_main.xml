<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="160"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60">

        <TextView
            android:layout_weight="6"
            android:background="#ed1b24"
            android:textColor="#f9ffff"
            android:textSize="80sp"
            android:gravity="center"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_weight="4"
            android:background="#fef102"
            android:textColor="#f9ffff"
            android:textSize="80sp"
            android:gravity="center"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_weight="5"
                android:background="#25b14e"
                android:textColor="#f9ffff"
                android:textSize="80sp"
                android:gravity="center"
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:layout_weight="5"
                android:background="#a349a3"
                android:textColor="#f9ffff"
                android:textSize="80sp"
                android:gravity="center"
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:background="#c7bfe6"
                android:textColor="#f9ffff"
                android:textSize="80sp"
                android:gravity="center"
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="60"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="30"
            android:background="#ff7f26"
            android:textColor="#f9ffff"
            android:textSize="80sp"
            android:gravity="center"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:layout_weight="30"
            android:background="#3f47cc"
            android:textColor="#f9ffff"
            android:textSize="80sp"
            android:gravity="center"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>

    </LinearLayout>
    
</LinearLayout>